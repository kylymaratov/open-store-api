generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Order

model Order {
  orderId         String  @unique @default(uuid())
  firstName       String
  lastName        String?
  deliveryAddress String?
  phoneNumber     String
  email           String?
  deliveryType    String  @default("delivery")
  products        Json
  comment         String?
  totalPrice      Int     @default(0)
  totalDiscount   Int     @default(0)
  published       Boolean @default(false)
  finished        Boolean @default(false)
  registerTime    String  @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Order")
}

// Category

model Category {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String  @unique
  viewsCount  Int     @default(0)
  description String?

  parentId Int?
  parent   Category?  @relation("CategoryToSub", fields: [parentId], references: [id])
  children Category[] @relation("CategoryToSub")

  products Product[]

  icon CategoryIcon?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
  @@map("Category")
}

model CategoryIcon {
  id           String @id @default(uuid())
  originalName String
  mimeType     String
  fileSize     Float
  encoding     String
  imageUrl     String
  imageId      String

  categoryId Int      @unique
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("CategoryIcon")
}

// Admin 

model Admin {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  verified   Boolean
  firstName  String
  lastName   String?
  middleName String?
  avatar     String?
  role       String
  isRoot     Boolean
  password   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Admin")
}

// User

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  verified   Boolean
  firstName  String
  lastName   String?
  middleName String?
  avatar     String?
  password   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("User")
}

// Banner

model Banner {
  id              Int          @id @default(autoincrement())
  bannerSlug      String       @unique
  position        Int
  openUrl         String
  title           String?
  description     String?
  buttonTitle     String?
  contentPosition String
  image           BannerImage?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Banner")
}

model BannerImage {
  id           String @unique @default(uuid())
  originalName String
  mimeType     String
  fileSize     Float
  encoding     String
  imageUrl     String
  imageId      String
  bannerId     Int    @unique

  banner Banner @relation(fields: [bannerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("BannerImage")
}

// Product

model Product {
  id              Int     @id @default(autoincrement())
  sku             String  @unique
  slug            String  @unique
  name            String
  inStock         Boolean
  price           Int
  dollarPrice     Int?
  discountPercent Int?
  discountedPrice Int?
  soldCount       Int
  categoryId      Int
  viewsCount      Int     @default(0)
  ratingCount     Int     @default(0)
  archived        Boolean @default(false)

  category Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  specs    ProductSpecs?

  images       ProductImage[]
  descriptions ProductDescription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name], map: "product_fulltext_idx")
  @@map("Product")
}

model ProductDescription {
  id       Int     @id @default(autoincrement())
  position Int
  type     String
  content  String?
  product  Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  productId Int

  @@map("ProductDescription")
}

model ProductImage {
  id           String  @unique @default(uuid())
  originalName String
  mimeType     String
  fileSize     Float
  encoding     String
  imageUrl     String
  imageId      String
  productId    Int
  fileName     String?
  position     Int

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, position])
  @@map("ProductImage")
}

model ProductSpecs {
  id        Int     @id @default(autoincrement())
  content   Json
  productId Int     @unique
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("ProductSpecs")
}

model DeletedQueue {
  id        String   @id @default(uuid())
  type      String
  itemId    String
  fileId    String
  attemps   Int      @default(0)
  createdAt DateTime @default(now())

  @@map("DeletionQueue")
}
